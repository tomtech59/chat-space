.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
        
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path do
            = fa_icon "pencil-square-o"
        %li.side-header__box__menu__edit
          = link_to edit_user_path(current_user) do
            = fa_icon "cog", class: "icon"
        
  .side-groups
    .side-group
      = link_to '#' do
        .side-group__group-name グループ名1
        .side-group__message メッセージ1
    .side-group
      = link_to '#' do
        .side-group__group-name グループ名2
        .side-group__message メッセージ2